<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NicaCashCounter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="et_style" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_bg_dark_style</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:ems">6</item>
        <item name="android:maxLength">3</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">number</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tvTotal" >
        <item name="android:background">@drawable/tv_bg_dark_style</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:hint">@string/total</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tvCordobas">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/custom_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="lltotal_style">
        <item name="android:background">@drawable/lltotal_dark_sel</item>
    </style>

</resources>